{% extends "AcmeWebUIBundle::layouts/accountbase.html.twig" %}

  {% block content %}

  {{ form_start(new_form) }}

      <div class="cont">
         <div class="new_form">

            <label for="new_form.goodsname" class="lab">商品名称</label>
            {{ form_widget(new_form.goodsname,{'attr': {'class': 'inp'}}) }}

            <label for="new_form.goodsnumber" class="lab">商品数量</label>
            {{ form_widget(new_form.goodsnumber,{'attr': {'class': 'inp'}}) }}

            <label for="new_form.soldnumber" class="lab">已兑换数量</label>
            {{ form_widget(new_form.soldnumber,{'attr': {'class': 'inp'}}) }}

            <label for="new_form.goodsprice" class="lab">商品价格</label>
            {{ form_widget(new_form.goodsprice,{'attr': {'class': 'inp'}}) }}

            <label for="new_form.goodsphoto" class="lab">商品图片</label>
            {{ form_widget(new_form.goodsphoto,{'attr': {'class': 'inp'}}) }}
                   
           </div>
       </div>  

          <input type="submit" value="添加" style="margin-left:280px;margin-top:30px;width:100px;height:30px;">

    {{ form_end(new_form) }}

 {% endblock %}