{% extends 'AcmeWebUIBundle::layouts/adminskin.html.twig' %}

{% block content %}

    <div class="am-cf am-padding">
      <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg"> Account </strong> </div>
    </div>

    <div class="am-g">
      <div class="am-u-sm-12">
      
	          <table class="am-table am-table-striped am-table-hover table-main">
		        
		            <tr>
		              <td> </td>
		              <td class="am-hide-sm-only">ID</td>
		              <td class="am-hide-sm-only">UserName</td>
		              <td class="am-hide-sm-only">Name</td>
		              <td class="am-hide-sm-only">Photo</td>
		              <td class="am-hide-sm-only">PhoneNumber</td>
		              <td class="am-hide-sm-only">OtherNumber</td>
		              <td class="am-hide-sm-only">SignAture</td>
		              <td class="am-hide-sm-only">Number</td>
		              <td class="am-hide-sm-only">Balance</td>
		              <td>操作</td>
		            </tr>

                    {% for account in accounts %}
	                    <tr>
	                     <td><input type="checkbox" /></td>
	                      <td class="am-hide-sm-only">{{ account.id }}</td>
	                      <td class="am-hide-sm-only"> {{ account.user.username }}</td>
			              <td class="am-hide-sm-only">{{ account.name }}</td>
			              <td class="am-hide-sm-only">{{ account.photo }}</td>
			              <td class="am-hide-sm-only">{{ account.phonenumber }}</td>
			              <td class="am-hide-sm-only">{{ account.othernumber }}</td>
			              <td class="am-hide-sm-only">{{ account.signature }}</td>
			              <td class="am-hide-sm-only">{{ account.number }}</td>
			              <td class="am-hide-sm-only">{{ account.balance }}</td>
			              <td>
			                <div class="am-btn-toolbar">
			                  <div class="am-btn-group am-btn-group-xs">

			                     {#}<a href=" {{ path('category_edit_path', { id : category.id })  }} ">
					                 <button class="am-btn am-btn-default am-btn-xs am-text-secondary"><span class="am-icon-pencil-square-o"></span> 编辑</button>
					             </a>   #}					               
					            <div class="">
				                   {{ form_start( delete_form, { 'action': path( 'account_delete_path', { 'id' : account.id } ) } ) }}                    
				                   {{ form_widget( delete_form ) }}  
				                   <input type="submit" value="删除" />
				                   {{ form_end(delete_form) }}
				                 </div>
			                  </div>
			                </div>
			              </td>
	                    </tr>
                    {% endfor %}
		    
	          </table>
         
      </div>

    </div>
 
{% endblock %}