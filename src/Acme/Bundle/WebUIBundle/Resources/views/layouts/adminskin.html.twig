<!doctype html>
<html class="no-js">
<head>
  <meta charset="utf-8">
  <title>零玖玖</title>
  <link rel="stylesheet" href="/assets/css/pc/amazeui.min.css"/>
  <link rel="stylesheet" href="/assets/css/pc/admin.css">
  <link rel="stylesheet" href="/assets/css/pc/style.css" />
</head>
<body>
<header class="am-topbar admin-header">
  <div class="am-topbar-brand">
    <strong>零玖玖</strong> <small>后台管理模板</small>
  </div>

  <button class="am-topbar-btn am-topbar-toggle am-btn am-btn-sm am-btn-success am-show-sm-only" data-am-collapse="{target: '#topbar-collapse'}"><span class="am-sr-only">导航切换</span> <span class="am-icon-bars"></span></button>

  <div class="am-collapse am-topbar-collapse" id="topbar-collapse">

    <ul class="am-nav am-nav-pills am-topbar-nav am-topbar-right admin-header-list">
      <li><a href="javascript:;"><span class="am-icon-envelope-o"></span> 收件箱 <span class="am-badge am-badge-warning">5</span></a></li>
      <li class="am-dropdown" data-am-dropdown>
        <a class="am-dropdown-toggle" data-am-dropdown-toggle href="javascript:;">
          <span class="am-icon-users"></span> 管理员 <span class="am-icon-caret-down"></span>
        </a>
        <ul class="am-dropdown-content">
          <li><a href="#"><span class="am-icon-user"></span> 资料</a></li>
          <li><a href="#"><span class="am-icon-cog"></span> 设置</a></li>
          <li><a href="#"><span class="am-icon-power-off"></span> 退出</a></li>
        </ul>
      </li>
      <li class="am-hide-sm-only"><a href="javascript:;" id="admin-fullscreen"><span class="am-icon-arrows-alt"></span> <span class="admin-fullText">开启全屏</span></a></li>
    </ul>
  </div>
</header>

<div class="am-cf admin-main">
  <!-- sidebar start -->
  <div class="admin-sidebar am-offcanvas" id="admin-offcanvas">
    <div class="am-offcanvas-bar admin-offcanvas-bar">
      <ul class="am-list admin-sidebar-list">
        <li><a href=""><span class="am-icon-home"></span> 首页 </a></li>
        <li><a href="{{ path('user_in_path') }}"><span class="am-icon-th"> ADMIN </span></a></li> 
   {% if is_granted('ROLE_USER') %}

        <li class="admin-parent">
          <a class="am-cf" data-am-collapse="{target: '#collapse5-nav'}"><span class="am-icon-file"></span> User <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
          <ul class="am-list am-collapse admin-sidebar-sub am-in" id="collapse5-nav">  
            <li><a href="{{ path('user_index_path') }}"><span class="am-icon-puzzle-piece"></span> Index </a></li>
            <li><a href="{{ path('user_create_path') }}"><span class="am-icon-th"></span> Add </a></li>
            <li><a href="{{ path('user_text_path') }}"><span class="am-icon-th"></span> Auth </a></li> 
          </ul>
        </li>

        <li><a href="{{ path('account_index_path') }}"><span class="am-icon-table"></span> Account </a></li>
        <li><a href="{{ path('reserve_index_path') }}"><span class="am-icon-table"></span> Reserve </a></li>
        <li><a href="{{ path('record_index_path') }}"><span class="am-icon-table"></span> Record </a></li>

        <li class="admin-parent">
          <a class="am-cf" data-am-collapse="{target: '#collapse-nav'}"><span class="am-icon-file"></span> Category <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
          <ul class="am-list am-collapse admin-sidebar-sub am-in" id="collapse-nav">
            <li><a href="{{ path('category_index_path') }}"><span class="am-icon-puzzle-piece"></span> Index </a></li>
            <li><a href="{{ path('category_create_path') }}"><span class="am-icon-th"></span> Add </a></li>
          </ul>
        </li>

        <li class="admin-parent">
          <a class="am-cf" data-am-collapse="{target: '#collapse1-nav'}"><span class="am-icon-file"></span> SubCategory <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
          <ul class="am-list am-collapse admin-sidebar-sub am-in" id="collapse1-nav">
            <li><a href="{{ path('subcategory_index_path') }}"><span class="am-icon-puzzle-piece"></span> Index </a></li>
            <li><a href="{{ path('subcategory_create_path') }}"><span class="am-icon-th"></span> Add </a></li>
          </ul>
        </li>

        <li class="admin-parent">
          <a class="am-cf" data-am-collapse="{target: '#collapse2-nav'}"><span class="am-icon-file"></span> Teacher <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
          <ul class="am-list am-collapse admin-sidebar-sub am-in" id="collapse2-nav">
            <li><a href="{{ path('teacher_index_path') }}"><span class="am-icon-puzzle-piece"></span> Index </a></li>
            <li><a href="{{ path('teacher_create_path') }}"><span class="am-icon-th"></span> Add </a></li>
          </ul>
        </li>

        <li class="admin-parent">
          <a class="am-cf" data-am-collapse="{target: '#collapse3-nav'}"><span class="am-icon-file"></span> Course <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
          <ul class="am-list am-collapse admin-sidebar-sub am-in" id="collapse3-nav">
            <li><a href="{{ path('course_index_path') }}"><span class="am-icon-puzzle-piece"></span> Index </a></li>
            <li><a href="{{ path('course_create_path') }}"><span class="am-icon-th"></span> Add </a></li>
          </ul>
        </li>

         <li class="admin-parent">
          <a class="am-cf" data-am-collapse="{target: '#collapse4-nav'}"><span class="am-icon-file"></span> CourseItem <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
          <ul class="am-list am-collapse admin-sidebar-sub am-in" id="collapse4-nav">
            <li><a href="{{ path('item_index_path') }}"><span class="am-icon-puzzle-piece"></span> Index </a></li>
            <li><a href="{{ path('item_create_path') }}"><span class="am-icon-th"></span> Add </a></li>
          </ul>
        </li>
        
      {% elseif is_granted('ROLE_TEACHER') %}

         <li class="admin-parent">
          <a class="am-cf" data-am-collapse="{target: '#collapse3-nav'}"><span class="am-icon-file"></span> Course <span class="am-icon-angle-right am-fr am-margin-right"></span></a>
          <ul class="am-list am-collapse admin-sidebar-sub am-in" id="collapse3-nav">
            <li><a href="{{ path('course_index_path') }}"><span class="am-icon-puzzle-piece"></span> Index </a></li>
            <li><a href="{{ path('course_create_path') }}"><span class="am-icon-th"></span> Add </a></li>
          </ul>
        </li>
       
       {% else %}
         
         <b>你没有权限访问</b>
          
       {% endif %}     
      </ul>

      <div class="am-panel am-panel-default admin-sidebar-panel">
        <div class="am-panel-bd">
          <p><span class="am-icon-bookmark"></span> 公告</p>
          <p>学如逆水行舟，不进则退 --零玖玖 </p>
        </div>
      </div>

      <div class="am-panel am-panel-default admin-sidebar-panel">
        <div class="am-panel-bd">
          <p><span class="am-icon-tag"></span> LingJiuJiu</p>
          <p>Welcome to the LingJiuJiu Learn!</p>
        </div>
      </div>
    </div>
  </div>
  <!-- sidebar end -->

  <!-- content start -->
  <div class="admin-content">

  {% block content %}


  {% endblock %}
   
  </div>
  <!-- content end -->

</div>

<a href="#" class="am-show-sm-only admin-menu" data-am-offcanvas="{target: '#admin-offcanvas'}">
  <span class="am-icon-btn am-icon-th-list"></span>
</a>

