

{% extends "AcmeWebUIBundle::layouts/accountbase.html.twig" %}

{% block content %}
    <div class="admin-content">

        <div class="am-cf am-padding">
          <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">用户消息详情</strong></div>
        </div>
    
    <ul>
          {% for user in users %}
            <li class="coup">
             用户名：{{ user.username }}  &nbsp &nbsp &nbsp 昵称： {{ user.account ? user.account.name : "" }}

             <br>
              <span class="cou">拥有的消息:</span> 
              <ul>
               
                {% for messag in user.message %}
                

                  <li class="size">

                      消息内容：{{ messag.content }} &nbsp  消息时间： {{ messag.time | date('Y-m-d H:i:s') }} 

                  </li>
                {% endfor %}
              </ul>
            </li>
          {% endfor %}
    </ul>

         
  </div>

  
{% endblock %}
